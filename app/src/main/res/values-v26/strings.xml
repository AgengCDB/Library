<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_box">
        <item name="android:paddingVertical">20dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:background">@drawable/input_box_stroke</item>
    </style>

    <style name="button_style">
        <item name="android:background">@drawable/button_def_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:font">@font/outfit_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_email_on">
        <item name="android:background">@drawable/button_login_email_on</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:font">@font/outfit_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button_email_off">
        <item name="android:background">@drawable/button_login_email_off</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:font">@font/outfit_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button_phone_on">
        <item name="android:background">@drawable/button_login_phone_on</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:font">@font/outfit_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button_phone_off">
        <item name="android:background">@drawable/button_login_phone_off</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:font">@font/outfit_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>